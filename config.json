{
  "bark_api_key": "your_bark_api_key_here",
  "bark_base_url": "https://api.day.app",
  "network_interface": "eth0",
  "scan_interval": 60,
  "scan_subnets": [
    "192.168.1.0/24",
    "192.168.0.0/24"
  ],
  "device_mapping": {
    "AA:BB:CC:DD:EE:FF": "iPhone 12",
    "11:22:33:44:55:66": "MacBook Pro",
    "22:33:44:55:66:77": "iPad",
    "33:44:55:66:77:88": "Android Phone",
    "44:55:66:77:88:99": "Smart TV"
  },
  "ignore_devices": [
    "FF:FF:FF:FF:FF:FF",
    "00:00:00:00:00:00"
  ],
  "notification_settings": {
    "AA:BB:CC:DD:EE:FF": "vibrate",
    "11:22:33:44:55:66": "silent",
    "22:33:44:55:66:77": "normal",
    "33:44:55:66:77:88": "vibrate",
    "44:55:66:77:88:99": "silent"
  },
  "notification_levels": {
    "vibrate": "有声音和震动的主动通知",
    "silent": "无声音无震动的静默通知",
    "normal": "默认声音的普通通知",
    "timeSensitive": "时效性通知（iOS 15+）"
  }
}